<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:UI.WPF.Modules.Mods.Converters"
             xmlns:views="clr-namespace:UI.WPF.Modules.Mods.Views" mc:Ignorable="d"
             x:Class="UI.WPF.Modules.Mods.Views.ModImageDisplayControl" x:Name="UserControl" d:DesignWidth="70.997"
             d:DesignHeight="120">

    <UserControl.Resources>
        <converters:BitmapConverter x:Key="BitmapConverter" />

        <ControlTemplate x:Key="ImageTemplate" TargetType="{x:Type ContentControl}">
            <Grid>
                <Image HorizontalAlignment="Center" VerticalAlignment="Center"
                       Source="{Binding ImagePath, Converter={StaticResource BitmapConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type views:ModImageDisplayControl}}}" />
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="NoImageTemplate" TargetType="{x:Type ContentControl}">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="No Image set" VerticalAlignment="Top"
                           Foreground="{DynamicResource AccentColorBrush}" />
            </Grid>
        </ControlTemplate>

        <Style x:Key="ImageStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Template" Value="{DynamicResource ImageTemplate}" />
            <Style.Triggers>
                <Trigger Property="Content" Value="{x:Null}">
                    <Setter Property="Template" Value="{DynamicResource NoImageTemplate}" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <ContentControl
            Content="{Binding ImagePath, Converter={StaticResource BitmapConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type views:ModImageDisplayControl}}}"
            MinHeight="120" Style="{StaticResource ImageStyle}" />
    </Grid>
</UserControl>