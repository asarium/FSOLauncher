<UserControl x:Class="UI.WPF.Modules.Installation.Views.ModInformationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mods="clr-namespace:ModInstallation.Interfaces.Mods;assembly=ModInstallation"
             xmlns:mods1="clr-namespace:UI.WPF.Modules.Installation.ViewModels.Mods"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance mods1:ModViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
	</UserControl.Resources>
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>
    	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Mod.Title}" VerticalAlignment="Top" Margin="5" FontWeight="Bold" FontSize="14.667" />
    	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Mod.Description}" VerticalAlignment="Top" Grid.Row="1" Margin="5" Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
    </Grid>
</UserControl>
