<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <!-- add your targets here -->

    <target xsi:type="File" name="applicationFile" fileName="${basedir}/logs/application.log"
            deleteOldFileOnStartup="true" />

    <target xsi:type="File" name="installationFile" fileName="${basedir}/logs/installation.log"
            deleteOldFileOnStartup="true" />
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="ModInstallation.*" minlevel="Trace" writeTo="installationFile" final="true" />
    
    <logger name="*" minlevel="Info" writeTo="applicationFile" />
  </rules>
</nlog>